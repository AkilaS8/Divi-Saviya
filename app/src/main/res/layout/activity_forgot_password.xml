<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLightBack"
    tools:context=".Activities.ForgotPassword">

    <ImageView
        android:layout_width="800dp"
        android:layout_height="600dp"
        android:layout_marginLeft="-75dp"
        android:layout_marginTop="-200dp"
        android:layout_marginRight="-75dp"
        android:src="@drawable/fogot_pass_back" />

    <TextView
        android:id="@+id/forget_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Enter the OPT code that received for your telephone number"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/forgot_opt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:background="@drawable/edit_text_back"
        android:fontFamily="@font/poppins_light"
        android:hint="OPT Code"
        android:inputType="phone"
        android:paddingLeft="55dp"
        android:paddingBottom="5dp" />

    <Button
        android:id="@+id/forgot_submit"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:background="@drawable/button_back"
        android:fontFamily="@font/poppins_semibold"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>